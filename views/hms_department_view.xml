<odoo>
    <data>

        <record id="department_action" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="res_model">hms.department</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <record id="department_iti" model="ir.ui.view">
            <field name="name">Department View</field>
            <field name="model">hms.department</field> 
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="capacity"/>
                    <field name="is_opened"/>
                    <!-- <field name="patient_ids"/>
                    <field name="doctor_ids"/> -->
                </tree>
            </field> 
        </record>
        <record id='hms_department_form_view' model='ir.ui.view'>
            <field name="name">Department Form View</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string = 'Department Information'>
                            <field name="name" placeholder='Enter Department Name'/>
                            <field name="capacity" placeholder='Enter Department Capacity'/>
                            <field name="is_opened"/>
                        </group>
                        <group string = 'Patients Information'>
                            <field name = 'patient_ids'>
                                <tree>
                                    <field name = "first_name"/>
                                    <field name="last_name"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                        <group string = 'Doctors Information'>
                            <field name = 'doctor_ids'>
                                <tree>
                                    <field name = "first_name"/>
                                    <field name="last_name"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem name="ITI" id="itimenue"/>
        <menuitem name="Departments" id="depmenue" parent="itimenue" sequence='2' action="department_action"/> 
    </data>
</odoo>